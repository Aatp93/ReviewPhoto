<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Review Photo
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
	<nav class="navbar navbar-dark bg-dark mb-2">
						<a class="navbar-brand" href="{{ path("photo.list") }}">Home</a>
						{# {% if app.user %}
						<a class = "navar-brand mb-4" href="{{path('photo.manage')}}"> Gerer mes photos </a> 
						{% endif %}   #}
					</nav>
		<div class="jumbotron text-center">
			<div class="row">
				<div class="col-8">
					<h1>Commenter des photos</h1>
				</div>
				<div class='col-4'>		
				
					<h5>Date :
						{{ "now"|date("m/d/Y") }}</h5>
					{% block connexion %}
						{% if not app.user %}
							<a href="{{ path("user.login") }}" class="btn btn-primary">Se connecter</a>
							<a href="{{path("user.create") }}" class ="btn btn-primary"> Creer votre compte </a> 
						{% else %}
							<span class="h3">Bienvenue :
								{{ app.user.pseudo }}
							</span>
							<a href="{{ path('user.logout') }}" class="btn btn-secondary mb-4">Se
										déconnecter</a>
										<br> 
										<a class = "btn btn-primary mb-4" href="{{path('photo.manage')}}"> Gerer mes photos </a> 
						{% endif %}
					{% endblock %}
					
				</div>	
					{% block body %}{% endblock %}


				</body>
			</html>

			